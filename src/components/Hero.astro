---
export interface Props{
	currentPage: String;
}

const {currentPage} =  Astro.props;

function linkTo( targetPage: string){
  return targetPage===currentPage? "" : targetPage;
}
---
<header class="hero"  data-theme="dark">
    <nav class="container">
        <hgroup>
        <h1><img src="./favicon.svg" alt="Millenium Flacon"/>&nbsp;Defy the odds</h1>
        <p>Hit-or-Mythras, a RP framework using odds, not probabilities</p>
    </hgroup>
        <ul>
            <li><a href={linkTo("/")}>Home</a></li>
            <li><a href={linkTo("/about")}>About</a></li>
            <li><a href="/" role='button'>Login</a></li>
        </ul>
    </nav>
</header>

<style>
    header{
        background-image: url("https://upload.wikimedia.org/wikipedia/commons/thumb/3/3e/Nicolas_R%C3%A9gnier_-_David_et_Goliath.jpg/1920px-Nicolas_R%C3%A9gnier_-_David_et_Goliath.jpg?20180402150006");
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }
    nav{
        backdrop-filter: blur(10px) invert(30%) brightness(60%);
    }
    hgroup{
        padding-left: 2rem;
    }
    li {
        padding-right: 2rem;
    }
</style>